@using Contacts.Enums
@model UserModel
@{
    ViewData["Title"] = "Atualizar";
}

<h1 class="display-4">Atualizar usuário</h1>

@if (TempData["ErrorMessage"] is not null)
{
    <div class="alert alert-danger" role="alert">
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
    </div>
}

<form asp-controller="Users" asp-action="Update" method="post">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Nome">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <br />

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="E-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />

    <div class="form-group">
        <label for="username">Usuário</label>
        <input type="text" asp-for="Username" class="form-control" id="username" placeholder="Usuário">
        @Html.ValidationMessageFor(x => x.Username)
    </div>
    <br />

    <div class="form-group">
        <label for="perfil">Selecione o Perfil do usuário</label>
        <select asp-for="Perfil" class="form-control" id="perfil">
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.User">Usuário</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <br />

    <button type="submit" class="btn btn-primary form-control">Atualizar</button>
    <a class="btn btn-link form-control" role="button" asp-controller="Users" asp-action="Index">Voltar</a>
</form>