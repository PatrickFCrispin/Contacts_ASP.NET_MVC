@model UserModel
@{
    ViewData["Title"] = "Remover";
}

<br />

<form asp-controller="Users" asp-action="Remove" asp-route-id="@Model.Id" method="post">
    <div class="text-center">
        <h3>Tem certeza que deseja remover o usuário (@Model.Name)?</h3>
        <br />

        <a class="btn btn-link" role="button" asp-controller="Users" asp-action="Index">Cancelar</a>
        <button type="submit" class="btn btn-danger">Confirmar</button>
    </div>
</form>